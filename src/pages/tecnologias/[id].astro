---
import EnMantenimiento from "@components/EnMantenimiento.astro";
import { LENGUAJES_INFO } from "@const/lenguajes";
import { PROYECTOS } from "@const/proyectos";
import Layout from "@layouts/Layout.astro";
import LayoutMenu from '@layouts/LayoutMenu.astro';


export async function getStaticPaths() {
  return LENGUAJES_INFO.map((lenguaje) => ({
    params: { id: lenguaje.id },
  }));
}

const { id } = Astro.params;
const lenguaje = LENGUAJES_INFO.find((l) => l.id === id);

if (!lenguaje) {
  throw new Error(`lenguaje no encontrado: ${id}`);
}

// Filtrar proyectos que incluyan el lenguaje

const proyectos = PROYECTOS.filter(proyecto =>
  proyecto.tecnologias.some(tech => tech.logo.toLowerCase() === id.toLowerCase().trim())
);


---
<LayoutMenu title={`Lenguaje: ${lenguaje.nombre} - Pere Alemany | Full-Stack Developer`}>
<EnMantenimiento>
<article class="max-w-7xl mx-auto px-4 py-12 text-white space-y-6">
    <a href="/tecnologias" class="flex flex-row items-center place-content-center gap-x-1 px-3 py-2 mt-5 rounded-lg bg-rosa text-azul w-max">
                            
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 fill-azul" viewBox="0 -960 960 960">
                                <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z"/>
                            </svg>
                            Volver atras
    </a>
    <div class="w-max grid grid-cols-2 gap-4">
        <div class="relative">
        <h1 class="text-6xl font-bold text-magenta flex flex-row gap-x-2 items-end"><a href={lenguaje.web} target="_blank" class="hover:underline duration-300">{lenguaje.nombre} {lenguaje.siglas_significado && <span class="text-4xl text-rosa first-letter:uppercase">{lenguaje.siglas_significado}</span>}</a></h1>
        <h2 class="text-2xl mt-2 font-semibold text-rosa first-letter:uppercase">{lenguaje.subcategoria}</h2>
        </div>
        <div>
            <img src={`/iconos/${lenguaje.id}.svg`} alt={`Logo de ${lenguaje.nombre}`} class="w-24 h-24"/>
        </div>
    </div>
  
  {
    lenguaje.apartados?.map(({ titulo, contenido, tipo }) => (
      <section class="space-y-4">
        <h3 class="text-3xl font-bold text-rosa">{titulo}</h3>
        <div class="space-y-2">
            {
                tipo === "parrafo" ? (<>
                {contenido.map(({texto}) => (
                    <p class="text-lg text-blanco">{texto}</p>
                ))}
                </>):(<></>)
            }
            {
                tipo === "lista" ? (<>
                <ul class="pl-2 custom-punto">
                {contenido.map(({texto}) => (
                    <li>
                    <p class="text-lg text-blanco">{texto}</p>
                    </li>
                ))}
                </ul>
                </>):(<></>)
            }
             {
                tipo === "codigo" ? (<>
                {contenido.map(({texto}) => (
                      <pre class="bg-black rounded-lg text-white overflow-hidden">
                        <div class="w-full h-auto flex flex-row ml-4 gap-x-4 ">
                            <span class="w-5 h-5 bg-red-600 rounded-full">&nbsp;</span>
                            <span class="w-5 h-5 bg-yellow-500 rounded-full">&nbsp;</span>
                            <span class="w-5 h-5 bg-green-600 rounded-full">&nbsp;</span>
                        </div>
                        <code>
                            {texto}
                    </code></pre>
                    
                ))}
                </>):(<></>)
            }
        </div>
       
      </section>
      
    ))
  }

<section class="max-w-7xl h-auto mx-auto mt-5">
    <h3 class="text-3xl font-bold text-rosa  max-sm:ml-10">Proyectos con {lenguaje.nombre}</h3>
    <div class="flex flex-wrap gap-2 text-azul p-2 mt-4 max-sm:place-content-center">  
        
        {proyectos.map(({ nombre, id, descripcion, web, github, estado, tipo_web }) => (
            <div id={id} class="w-96 h-auto bg-blanco rounded-lg  group">
                <img src={`/portadas/${id}.png`} alt={`Portada de la web ${nombre}`} class="w-full rounded-t-lg h-52 object-cover"/>
                <div class="p-2">
                                        <div class="w-full grid grid-cols-[1fr_auto] gap-x-2">
                         <h4 class="text-xl w-max text-magenta font-medium">{nombre}</h4>
                         <h5 class={`text-sm flex flex-row items-center font-medium gap-x-1 w-full ${estado === "En Producción" ? 'text-green-600':''}`}><span class={`w-[6px] h-[6px] inline-block rounded-full ${estado === "En Producción" ? 'bg-green-600':''}`}>&nbsp;</span>{estado}</h5>
                    </div>
                    <div class="flex flex-row gap-x-2 my-1">
                    {tipo_web && tipo_web.length > 0 && (
                        <span class="text-sm text-rosa font-medium">
                            {tipo_web.map(({ tipo }) => tipo).join(" + ")}
                        </span>
                        )}
                    </div>
                    <p class="maximo-lines">{descripcion}</p>

                    <div class="flex flex-row gap-x-2 mt-3">
                        <a href={web} target="_blank" class="flex flex-row items-center place-content-center gap-x-1 px-3 py-2 rounded-lg bg-azul text-blanco w-max">
                            <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 -960 960 960" class="w-6 h-6 fill-blanco" >
                                <path d="M480-80q-82 0-155-31.5t-127.5-86Q143-252 111.5-325T80-480q0-83 31.5-155.5t86-127Q252-817 325-848.5T480-880q83 0 155.5 31.5t127 86q54.5 54.5 86 127T880-480q0 82-31.5 155t-86 127.5q-54.5 54.5-127 86T480-80Zm0-82q26-36 45-75t31-83H404q12 44 31 83t45 75Zm-104-16q-18-33-31.5-68.5T322-320H204q29 50 72.5 87t99.5 55Zm208 0q56-18 99.5-55t72.5-87H638q-9 38-22.5 73.5T584-178ZM170-400h136q-3-20-4.5-39.5T300-480q0-21 1.5-40.5T306-560H170q-5 20-7.5 39.5T160-480q0 21 2.5 40.5T170-400Zm216 0h188q3-20 4.5-39.5T580-480q0-21-1.5-40.5T574-560H386q-3 20-4.5 39.5T380-480q0 21 1.5 40.5T386-400Zm268 0h136q5-20 7.5-39.5T800-480q0-21-2.5-40.5T790-560H654q3 20 4.5 39.5T660-480q0 21-1.5 40.5T654-400Zm-16-240h118q-29-50-72.5-87T584-782q18 33 31.5 68.5T638-640Zm-234 0h152q-12-44-31-83t-45-75q-26 36-45 75t-31 83Zm-200 0h118q9-38 22.5-73.5T376-782q-56 18-99.5 55T204-640Z"/>
                            </svg>
                            Visitar WEB
                        </a>
                        <a href={`/${id}`} class="flex flex-row items-center place-content-center gap-x-1 px-3 py-2 rounded-lg bg-rosa text-azul w-max">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960" class="w-6 h-6 fill-azul">
                                <path d="M440-280h80v-240h-80v240Zm40-320q17 0 28.5-11.5T520-640q0-17-11.5-28.5T480-680q-17 0-28.5 11.5T440-640q0 17 11.5 28.5T480-600Zm0 520q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Zm0-320Z"/>
                            </svg>
                            Más informacion
                        </a>
                        {
                            github !== '' ? (<>
                            <a href={github} target="_blank" class="flex flex-row items-center place-content-center gap-x-1 px-2 py-2 rounded-lg bg-black">
                                <img src={`/github.svg`} class="w-6 h-6" alt={`Logo de Github`} />
                            </a>
                            </>) : (<></>)
                        }
                    </div>
                </div>
                
            </div>
        ))}
    </div>
</section>
  


</article>
</EnMantenimiento>
</LayoutMenu>

<style>
    .custom-punto li {
    position: relative;
    padding-left: 1rem; /* Espacio para el nuevo "bullet" */
}

.custom-punto li::before {
    content: '•'; /* El símbolo del "bullet" */
    color: #c23a97; /* Color amarillo */
    position: absolute;
    left: 0;
    font-size: 1.125em; /* Tamaño del punto similar al texto */
}

.maximo-lines {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  max-height: 4.5rem; /* 3 líneas * line-height ~1.5rem */
}

</style>