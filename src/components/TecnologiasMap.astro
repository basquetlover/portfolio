---
import { LENGUAJES_POR_CATEGORIA } from "@const/lenguajes";
---

{Object.entries(LENGUAJES_POR_CATEGORIA).map(([categoria, lenguajes]) => (
  <section>
    <h2 class="text-3xl text-rosa font-bold">{categoria.toUpperCase()}</h2>
    <div class="flex flex-wrap gap-4 mt-4">
       {lenguajes.map(({ nombre, id, subcategoria, descripcion, web, precio }) => (
      <div class="ml-4 my-1 p-3 w-64 h-w-64 bg-blanco rounded grid grid-rows-[auto_1fr_auto] gap-3">
        <div class="w-full grid grid-cols-[1fr_max-content] ">
            <div class="flex flex-col justify-start w-full">
              <span class="font-semibold text-magenta text-2xl">{nombre}</span>
              {subcategoria && <span class="text-base text-rosa first-letter:uppercase">{subcategoria}</span>}
              {precio && <span class="text-sm text-azul"></span>}
            </div>
            <div class="w-full h-full flex items-center justify-center">
              <img src={`/iconos/${id}.svg`} alt={`Logo de ${nombre}`} class="w-16 h-16 mx-auto"/>
            </div>
        </div>
        <p class="text-black text-base">
          {descripcion}
        </p>
        <div class="w-full flex flex-row gap-x-1">
          {
            web ? (<>
            <a href={web} target="_blank" class="mx-auto flex flex-row items-center place-content-center gap-x-1 px-3 py-2 rounded-lg bg-azul duration-300 w-max">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960" class="w-6 h-6 fill-rosa">
                  <path d="M480-80q-82 0-155-31.5t-127.5-86Q143-252 111.5-325T80-480q0-83 31.5-155.5t86-127Q252-817 325-848.5T480-880q83 0 155.5 31.5t127 86q54.5 54.5 86 127T880-480q0 82-31.5 155t-86 127.5q-54.5 54.5-127 86T480-80Zm0-82q26-36 45-75t31-83H404q12 44 31 83t45 75Zm-104-16q-18-33-31.5-68.5T322-320H204q29 50 72.5 87t99.5 55Zm208 0q56-18 99.5-55t72.5-87H638q-9 38-22.5 73.5T584-178ZM170-400h136q-3-20-4.5-39.5T300-480q0-21 1.5-40.5T306-560H170q-5 20-7.5 39.5T160-480q0 21 2.5 40.5T170-400Zm216 0h188q3-20 4.5-39.5T580-480q0-21-1.5-40.5T574-560H386q-3 20-4.5 39.5T380-480q0 21 1.5 40.5T386-400Zm268 0h136q5-20 7.5-39.5T800-480q0-21-2.5-40.5T790-560H654q3 20 4.5 39.5T660-480q0 21-1.5 40.5T654-400Zm-16-240h118q-29-50-72.5-87T584-782q18 33 31.5 68.5T638-640Zm-234 0h152q-12-44-31-83t-45-75q-26 36-45 75t-31 83Zm-200 0h118q9-38 22.5-73.5T376-782q-56 18-99.5 55T204-640Z"/>
              </svg>
           
              
          </a>
            </>):(<></>)
          }
          <a href={`/tecnologias/${id}`} class="mx-auto flex flex-row items-center place-content-center gap-x-1 px-3 py-2 rounded-lg bg-rosa hover:bg-magenta duration-300 text-azul w-max">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960" class="w-6 h-6 fill-azul">
                  <path d="M440-280h80v-240h-80v240Zm40-320q17 0 28.5-11.5T520-640q0-17-11.5-28.5T480-680q-17 0-28.5 11.5T440-640q0 17 11.5 28.5T480-600Zm0 520q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Zm0-320Z"/>
              </svg>
              Más informacion
          </a>
        </div>
        
      </div>
    ))}
    </div>
   
  </section>
))}
<style>
p {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  max-height: 4.5rem; /* 3 líneas * line-height ~1.5rem */
}
</style>
