{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "astro/client"
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@sections/*": [
        "src/sections/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@const/*": [
        "src/const/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@formas/*": [
        "src/formas/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": ["src", "src/types"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}

